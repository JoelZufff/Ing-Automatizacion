#include <18f4550.h>   // Libreria del Microcontrolador
#fuses INTRC, NOWDT, NOPROTECT, NOLVP, CPUDIV1, PLL1, NOMCLR // Fusibles (Configuraciones del microcontrolador)
#use delay(clock = 8M)  // 4M es 4 millones. Establecemos la velocidad va a operar el micro

void main()
{
   int16 i=0,b; // Los enteros tienen 1 byte le ponemos int16 para evitar eso
   while(true)
   { 
      i = 0;
      
      while(input(pin_d0) && !input(pin_d1))
      {
         output_b(i++);
         delay_ms(20);
         
         if(i>256)
            i = 0;
      }
      output_b(0);
         
      i = 1;
      
      while(!input(pin_d0) && input(pin_d1))
      {
         output_b(i);
         delay_ms(200);
         i *= 2;
         
         if(i > 256)
            i = 1;
      }
      output_b(0);
      
      i = 0;
      while(!input(pin_d0) && !input(pin_d1))
      {
         b = i % 2;
         if(b == 0)
         {
            output_b(0b11111111);
            delay_ms(1000);
         }
         else
            output_b(0);
         
         i++;
      }
      output_b(0);
      
      i = 256;
      
      while(input(pin_d0) && input(pin_d1))
      {
         output_b(i);
         delay_ms(200);
         i /= 2;
         
         if(i == 1)
            i = 256;
      }
   }
}
