#include <18f4550.h>   // Libreria del Microcontrolador
#fuses INTRC, NOWDT, NOPROTECT, NOLVP, CPUDIV1, PLL1, NOMCLR // Fusibles (Configuraciones del microcontrolador)
#use delay(clock = 8M)  // 4M es 4 millones. Establecemos la velocidad va a operar el micro

void main()
{
   int16 i = 0; // Los enteros tienen 1 byte le ponemos int16 para evitar eso
   int B = 0;
   
   while(true)
   {
      if(input(pin_d2))
            B = 1;
            
      for(i = 1; input(pin_d0) && !input(pin_d1) && B; i*=2) // Primer Boton
      {
         
         if(input(pin_d3))
            B = 0;
            
         if(i > 128)
            i = 1;
               
         output_b(i);
         delay_ms(200);
      }
      output_b(0);
      
      for(i = 128; !input(pin_d0) && input(pin_d1) && B; i/=2) // Segundo Boton
      {
         if(input(pin_d3))
            B = 0;
            
         if(i < 1)
            i = 128;
               
         output_b(i);
         delay_ms(200);
      }
      output_b(0);
      
      for(i = 1; !input(pin_d0) && !input(pin_d1); i++) // Ningun Boton
      {
         if(input(pin_d2))
            B = 1;
         else if(input(pin_d3))
            B = 0;
            
         if(B)
         {
            output_b(i);
            delay_ms(100);
            
            if(i >= 256)
               i = 0;
         }
         else
            break;
      }
      output_b(0);
     
      for(i = 256; input(pin_d0) && input(pin_d1); i--) // Los 2 botones
      {
         if(input(pin_d2))
            B = 1;
         else if(input(pin_d3))
            B = 0;
         if(B)
         {   
            output_b(i);
            delay_ms(100);
            
            if(i <= 1)
               i = 256;
         }
         else
            break;
      }
      output_b(0);
   }
}
